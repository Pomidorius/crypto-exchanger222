# ==============================================
# КОНФИГУРАЦИЯ ДЛЯ CRYPTO EXCHANGER
# ==============================================

# СЕТЬ (1 = mainnet, 11155111 = sepolia, 31337 = localhost)
NEXT_PUBLIC_CHAIN_ID=11155111

# RPC ПРОВАЙДЕРЫ
# Основной RPC URL
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# Резервные RPC
NEXT_PUBLIC_ALCHEMY_KEY=your_alchemy_key
NEXT_PUBLIC_QUICKNODE_URL=https://your-endpoint.quiknode.pro/your-key/

# АДРЕСА КОНТРАКТОВ
# Sepolia testnet
NEXT_PUBLIC_CONTRACT_ADDRESS_SEPOLIA=0x01b44565F7Bb276E156023699225612887c63AC3
# Mainnet (заполнить после деплоя)
NEXT_PUBLIC_CONTRACT_ADDRESS_MAINNET=0x0000000000000000000000000000000000000001

# ПРИВАТНЫЕ КЛЮЧИ (НЕ КОММИТИТЬ!)
# Для деплоя контрактов (только для тестнета)
DEPLOYER_PRIVATE_KEY=your_private_key_here
# Для faucet'а (только для тестнета) 
FAUCET_PRIVATE_KEY=your_faucet_private_key_here

# БЕЗОПАСНОСТЬ
# Для продакшена - использовать Hardware Wallet или Multisig
# НЕ ИСПОЛЬЗОВАТЬ приватные ключи в .env для mainnet!

# МОНИТОРИНГ И АНАЛИТИКА
# Etherscan API ключи
ETHERSCAN_API_KEY=your_etherscan_api_key
SEPOLIA_ETHERSCAN_API_KEY=your_sepolia_etherscan_api_key

# Sentry для отслеживания ошибок
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ВНЕШНИЕ СЕРВИСЫ
# CoinGecko для получения цен
COINGECKO_API_KEY=your_coingecko_api_key

# Telegram бот для уведомлений
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ==============================================
# ПРИМЕРЫ КОНФИГУРАЦИЙ ДЛЯ РАЗНЫХ СРЕД
# ==============================================

# LOCALHOST DEVELOPMENT:
# NEXT_PUBLIC_CHAIN_ID=31337
# NEXT_PUBLIC_RPC_URL=http://127.0.0.1:8545

# SEPOLIA TESTNET:
# NEXT_PUBLIC_CHAIN_ID=11155111
# NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_KEY

# MAINNET PRODUCTION:
# NEXT_PUBLIC_CHAIN_ID=1
# NEXT_PUBLIC_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
# НЕ ИСПОЛЬЗОВАТЬ DEPLOYER_PRIVATE_KEY для mainnet!
