{
  "buildCommand": "npm run build:prod",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "NEXT_PUBLIC_CHAIN_ID": "1",
    "NEXT_PUBLIC_RPC_URL": "https://mainnet.infura.io/v3/YOUR_INFURA_KEY"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
