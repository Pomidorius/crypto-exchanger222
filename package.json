{
  "name": "crypto-exchanger",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --coverage",
    "node": "npx hardhat node",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:tokens": "npx hardhat run scripts/deploy-with-tokens.js --network localhost",
    "deploy:simple": "npx hardhat run scripts/deploy-simple.js --network localhost",
    "deploy:improved": "npx hardhat run scripts/deploy-improved.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy-improved.js --network sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy-mainnet.js --network mainnet",
    "deploy:improved-mainnet": "npx hardhat run scripts/deploy-improved.js --network mainnet",
    "update:address": "node scripts/update-contract-address.js",
    "check:balances": "npx hardhat run scripts/check-balances.js --network localhost",
    "check:wallet": "node scripts/check-wallet.js",
    "dev:full": "concurrently \"npm run node\" \"npm run dev\"",
    "mainnet:deploy": "npm run deploy:mainnet && npm run update:address",
    "mainnet:deploy-improved": "npm run deploy:improved-mainnet && npm run update:address"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.5",
    "@tanstack/react-query": "^5.76.2",
    "@uniswap/v3-periphery": "^1.4.4",
    "dotenv": "^16.5.0",
    "next": "^14.2.29",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "viem": "^2.30.0",
    "wagmi": "^2.15.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/chai": "^5.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chai": "^5.2.0",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.8.0",
    "hardhat": "^2.24.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
